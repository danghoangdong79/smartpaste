{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartPaste",
  "version": "0.3.0",
  "identifier": "com.dahodo.smartpaste",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Smart Paste",
        "width": 420,
        "height": 700,
        "resizable": false,
        "decorations": true,
        "center": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}